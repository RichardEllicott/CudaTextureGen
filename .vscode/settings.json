    "workbench.colorTheme": "Monokai",
    "C_Cpp.intelliSenseEngine": "default",
    "files.eol": "\n",
    "files.associations": {
        "vector": "cpp",
        "filesystem": "cpp",
        "locale": "cpp",
        "__locale": "cpp",
        "chrono": "cpp",
        "xiosbase": "cpp",
        "ios": "cpp",
