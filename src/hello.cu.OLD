// hello.cu
#include "core_api.h"
#include <cstdio>

__global__ void hello_kernel() {
    printf("Hello from GPU thread %d\n", threadIdx.x);
}

extern "C" void cuda_hello() {
    printf("Hello from CPU\n");

    // Launch kernel with 5 threads
    hello_kernel<<<1, 5>>>();
    cudaDeviceSynchronize();
}
